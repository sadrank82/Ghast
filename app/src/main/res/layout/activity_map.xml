<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent">
    <!--  مپ  -->
    <org.osmdroid.views.MapView android:id="@+id/mapView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <!--  هدر  -->
    <LinearLayout android:id="@+id/headerLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#CCFFFFFF" android:clickable="true" android:elevation="8dp" android:focusable="true" android:focusableInTouchMode="true" android:gravity="center_vertical" android:orientation="horizontal" android:padding="@dimen/_12sdp">
        <ImageView android:id="@+id/imageBack" android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp" android:clickable="true" android:focusable="true" android:src="@drawable/ic_arrow_back_24" app:tint="@color/black"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/_8sdp" android:includeFontPadding="false" android:text="نقشه" android:textSize="@dimen/_15sdp"/>
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <!--  باتم شیت  -->
        <LinearLayout android:id="@+id/bottomSheetContainer" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/_72sdp" android:background="@drawable/bg_bottomsheet" android:orientation="vertical" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            <!--  نوار بالا برای درگ  -->
            <View android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_4sdp" android:layout_gravity="center" android:layout_marginTop="8dp" android:layout_marginBottom="4dp" android:background="@drawable/bg_drag_indicator"/>
            <!--  عنوان  -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="end" android:layout_margin="@dimen/_8sdp" android:text="مکان ها" android:textSize="@dimen/_18sdp"/>
            <!--  محتوا  -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center_horizontal" android:orientation="vertical" android:padding="@dimen/_8sdp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:alpha=".6" android:gravity="center" android:text="@string/text"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/mapList" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>