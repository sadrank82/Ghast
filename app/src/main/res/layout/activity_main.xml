<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#9C9CC7"
    android:layout_height="match_parent"
    tools:context=".ClothesActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- HorizontalScrollView برای تب‌ها -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:backgroundTint="#FAECD2FF"
                    android:text="صفحه اصلی"
                    android:textColor="@android:color/black"
                    app:cornerRadius="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FAECD2FF"
                    android:text="صفحه 2"
                    android:textColor="@android:color/black"
                    app:cornerRadius="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:backgroundTint="#FAECD2FF"
                    android:text="صفحه 3"
                    android:textColor="@android:color/black"
                    app:cornerRadius="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FAECD2FF"
                    android:text="صفحه 4"
                    android:textColor="@android:color/black"
                    app:cornerRadius="30dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tab5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:backgroundTint="#FAECD2FF"
                    android:text="صفحه 5"
                    android:textColor="@android:color/black"
                    app:cornerRadius="30dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- بخش یادداشت -->
        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalScrollView"
            android:background="#FAD2EA"
            android:padding="16dp"
            android:text="یادداشت‌های شما"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <!-- دکمه شناور برای افزودن یادداشت -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/data"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#AFBCE2"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/ic_input_add"/>

        <!-- نوار ناوبری پایین صفحه -->
        <LinearLayout
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/accounticon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/ic_account_circle_24"/>

                <TextView
                    android:id="@+id/textaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="کاربر"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/mapIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_map_24"/>

                <TextView
                    android:id="@+id/textmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="نقشه"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingTop="@dimen/_15sdp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/homeIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:src="@drawable/ic_home_24"
                    tools:layout_editor_absoluteX="86dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/texthome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginEnd="@dimen/_27sdp"
                    android:gravity="center"
                    android:text="خانه"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingTop="@dimen/_15sdp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/calendarIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/ic_calendar_month_24"
                    tools:layout_editor_absoluteX="86dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/textcalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="تقویم"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:src="@drawable/ic_menu_24"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="308dp" />

        </ LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>